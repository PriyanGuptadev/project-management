<%= form_with model: [commentable, Comment.new], local: true, class: "space-y-4" do |form| %>
  <%= hidden_field_tag :commentable_id, commentable.id %>

  <div class="flex flex-col space-y-2">
    <%= form.label :content, class: "font-medium text-gray-700" %>
    <%= form.text_area :content, class: "w-full p-2 border rounded-lg focus:ring focus:ring-indigo-200" %>
  </div>

  <div class="flex justify-end">
    <%= form.submit "Post Comment", class: "bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700" %>
  </div>
<% end %>